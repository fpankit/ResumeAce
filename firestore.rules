rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * PROTOTYPE MODE SECURITY RULES
     * 
     * Core Philosophy:
     * This ruleset implements a strict user-ownership model combined with an "Existence over Content" 
     * pattern for administrative access. It prioritizes secure authorization and relational integrity 
     * while allowing for rapid iteration on the data schema itself.
     *
     * Data Structure:
     * - User profiles are stored at `/users/{userId}`.
     * - Resume analyses are nested as subcollections: `/users/{userId}/resumeAnalyses/{analysisId}`.
     * - Admin roles are managed via a dedicated top-level collection: `/roles_admin/{userId}`.
     *
     * Key Security Decisions:
     * 1. Authorization Independence: Ownership is determined primarily by the document path 
     *    (e.g., `{userId}`), avoiding expensive `get()` calls for most standard user operations.
     * 2. Admin Elevation: Global admin access is granted if a document exists for the user's UID 
     *    in the `/roles_admin` collection.
     * 3. Relational Integrity: On document creation, the rules enforce that internal ID fields 
     *    match the authenticated user's UID to prevent "identity spoofing" in the data.
     * 4. State Safety: All updates and deletes require explicit verification that the document 
     *    exists and is owned by the requester.
     */

    // --- Helper Functions ---

    /** @description Checks if the request is from an authenticated user. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** @description Checks if the authenticated user's UID matches the provided ID. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** @description Checks if the authenticated user has a record in the admin roles collection. */
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /** @description Combines ownership check with existence check for destructive operations. */
    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    // --- Collection Rules ---

    /**
     * @description Rules for user profile documents. Allows users to manage their own profile and admins to view all.
     * @path /users/{userId}
     * @allow (create) User with UID 'abc' creating /users/abc
     * @deny (create) User with UID 'abc' creating /users/xyz
     * @principle Ownership and Relational Integrity.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isOwner(userId) || isAdmin();
      
      // Relational Integrity: Ensure the document ID matches the 'id' field in the data.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      
      // Safety: Prevent ownership transfer by making the 'id' field immutable.
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);

      /**
       * @description Rules for resume analyses. Nested under the user to ensure path-based authorization.
       * @path /users/{userId}/resumeAnalyses/{resumeAnalysisId}
       * @allow (list) User 'abc' listing /users/abc/resumeAnalyses
       * @deny (get) User 'abc' getting /users/def/resumeAnalyses/123
       * @principle Hierarchical ownership.
       */
      match /resumeAnalyses/{resumeAnalysisId} {
        allow get: if isOwner(userId) || isAdmin();
        allow list: if isOwner(userId) || isAdmin();
        
        // Relational Integrity: Force the internal 'userId' field to match the path.
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
      }
    }

    /**
     * @description Admin Role Management. Controls global admin privileges via document existence.
     * @path /roles_admin/{adminId}
     * @allow (get) Any signed-in user checking an admin status.
     * @deny (create) A standard user trying to make themselves an admin.
     * @principle DBAC (Database-Based Access Control) - Existence over Content.
     */
    match /roles_admin/{adminId} {
      // Any authenticated user can check if a user is an admin (required for app logic)
      allow get: if isSignedIn();
      
      // Only existing admins can list the admin directory
      allow list: if isAdmin();
      
      // Writes are forbidden via client SDKs. Use Cloud Functions or the Firebase Console.
      allow create, update, delete: if false;
    }
  }
}